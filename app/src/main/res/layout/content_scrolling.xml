<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_scrolling"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.soma.second.matnam.ui.FoodScrollingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="음식 관련 정보 음식 관련 정보 정보\n 음식 관련 정보 정보 음식 관련 정보 정보 음식 관련 정보" />

        <com.soma.second.matnam.ui.widget.ExpandableHeightGridView
            android:id="@+id/food_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:columnWidth="75dp"
            android:isScrollContainer="false"
            android:gravity="center"
            android:numColumns="3"
            android:stretchMode="columnWidth">
        </com.soma.second.matnam.ui.widget.ExpandableHeightGridView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
